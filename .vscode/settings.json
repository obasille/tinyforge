{
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "sdk.*\\.ts$",
        "isAsync": true,
        "cmd": "npm run build"
      },
      {
        "match": "games.*\\.ts$",
        "isAsync": true,
        "cmd": "node scripts/build-game.js ${fileBasename}"
      },
      {
        "match": "(host.*\\.ts$|memory-map\\.ts$)",
        "isAsync": true,
        "cmd": "npm run build:host"
      }
    ]
  },
  "liveServer.settings.ignoreFiles": [
    // Don't watch games and sdk source files
    "**/games/*.ts",
    "**/sdk/*.ts",
    // Don't watch compiled WebAssembly files
    "**/*.wasm"
  ]
}
