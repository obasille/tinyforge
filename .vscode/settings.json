{
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "sdk.*\\.ts$",
        "isAsync": true,
        "cmd": "npm run build"
      },
      {
        "match": "games.*\\.ts$",
        "isAsync": true,
        "cmd": "node scripts/build-game.js ${fileBasename}"
      }
    ]
  }
}
