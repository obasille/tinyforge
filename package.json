{
  "name": "tinyforge",
  "version": "0.1.0",
  "description": "A simplified game platform for rapidly prototyping and experimenting with 2D game ideas",
  "type": "module",
  "scripts": {
    "build": "npm run build:minesweeper && npm run build:pong && npm run build:snake",
    "build:debug": "npm run build:minesweeper:debug && npm run build:pong:debug && npm run build:snake:debug",
    "build:minesweeper": "asc games/minesweeper.ts -o cartridges/minesweeper.wasm --config games/asconfig.json",
    "build:minesweeper:debug": "asc games/minesweeper.ts -o cartridges/minesweeper.wasm --config games/asconfig.json --target debug",
    "build:pong": "asc games/pong.ts -o cartridges/pong.wasm --config games/asconfig.json",
    "build:pong:debug": "asc games/pong.ts -o cartridges/pong.wasm --config games/asconfig.json --target debug",
    "build:snake": "asc games/snake.ts -o cartridges/snake.wasm --config games/asconfig.json",
    "build:snake:debug": "asc games/snake.ts -o cartridges/snake.wasm --config games/asconfig.json --target debug",
    "serve": "python -m http.server 8080",
    "dev": "npm run build && npm run serve"
  },
  "keywords": [
    "tinyforge",
    "game-platform",
    "webassembly",
    "assemblyscript",
    "gamedev"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "assemblyscript": "^0.28.9"
  }
}
